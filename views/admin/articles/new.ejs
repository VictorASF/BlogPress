<%- include('../../partials/header.ejs') %>
<body>
    
    <%- include('../../partials/navbar.ejs') %>


    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">
                <form action="/articles/save" method="POST">
                    <input class='form-control mb-3' type="text" name='title' placeholder="Defina o titulo do artigo">
                    <textarea class='form-control' 
                    placeholder="Escreva o artigo aqui" id='article' name="body"></textarea>
                    <label class='mt-3'>Categoria</label>
                    <select name="category" class='form-control'>
                        <% categories.forEach((category)=>{ %>
                          <option value="<%=category.id%>"><%=category.title%></option>  
                        <% }) %>
                    </select>
                    <button class="btn mt-3 btn-success">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>

</body>
<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js" ></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins:[
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        language: 'pt_BR' 
    })
</script>